<%include header.ejs %>
<%include nav.ejs %>
<div id = "home" class = "container">
    <h1 class="polls-head">Polls</h1>
    <div class="main-aligner">
        
        <% for(var i = 0; i < allPolls.length; i++){ %>
            <div class="title">
                <div class="poll-name" style="text-transform: uppercase;">
                    <%= allPolls[i].title %>
                </div>
                    <div class="poll-link">
                        <div class= "poll-view">
                            <a href="polls/<%= allPolls[i]._id %>" class="btn button view"><span class="glyphicon glyphicon-thumbs-up"></span> Vote</a>
                        </div>
                        <div class="createdBy">
                            <p>Created by: <%=allPolls[i].createdBy %></p>
                        </div>
                    </div>
            </div>
        <%}%>
    </div>
</div>